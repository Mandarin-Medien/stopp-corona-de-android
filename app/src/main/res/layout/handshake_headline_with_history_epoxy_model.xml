<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/AppTheme.Heading2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/txtSavedEncounters"
        app:layout_constraintEnd_toStartOf="@id/txtSavedEncounters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtSavedEncounters"
        tools:text="Headline" />

    <TextView
        android:id="@+id/txtSavedEncounters"
        style="@style/AppTheme.ListTime.Bold"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/shape_history_counter_background"
        android:drawableEnd="@drawable/ic_arrow_right_small"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="72dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />
</androidx.constraintlayout.widget.ConstraintLayout>
